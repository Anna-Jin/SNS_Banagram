<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.banagram.user.dao.UserDAO">
 	<select id="existEmail" resultType="boolean" parameterType="String">
 		SELECT
 			COUNT(1)
 		FROM
 			`user`
 		WHERE
 			`email` = #{email}
 	</select>
 	<select id="existLoginId" resultType="boolean" parameterType="String">
 		SELECT
 			COUNT(1)
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 	</select>
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO `user`
 		(
 			`email`
 			, `name`
 			, `loginId`
 			, `password`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{email}
 			, #{name}
 			, #{loginId}
 			, #{password}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	<select id="selectUserByLoginIdPassword" parameterType="map" resultType="com.banagram.user.model.User">
 		SELECT
 			`id`
			,`email`
			,`name`
			,`loginId`
			,`password`
			,`profileImageUrl`
			,`introduce`
			,`createdAt`
			,`updatedAt`
		FROM `user`
		WHERE
			`loginId` = #{loginId}
			AND `password` = #{password}
 	</select>
 	<select id="selectUserByUserId" parameterType="int" resultType="com.banagram.user.model.User">
 	SELECT
 			`id`
			,`email`
			,`name`
			,`loginId`
			,`password`
			,`profileImageUrl`
			,`introduce`
			,`createdAt`
			,`updatedAt`
		FROM `user`
		WHERE
			`id` = #{id}
 	</select>
 </mapper>